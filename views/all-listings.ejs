<%- include('../views/partials/header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2"></div>
            <div class="col">

                <div class="offset-4 my-xl-5">
                    <h2>All Listings</h2>
                </div>

                <div class="mt-xl-5">
                    <% if(home.length> 0) { %>
                        <table class=" w-75">
                            <tr>
                                <th class="fw-bold">Parish</th>
                                <th class="fw-bold">City</th>
                                <th class="fw-bold">Bedrooms</th>
                                <th class="fw-bold">Bathrooms</th>
                                <th class="fw-bold">Price</th>
                                <th class="fw-bold">Status</th>
                                <th class="fw-bold">View</th>
                                
                            </tr>
                            <% home.forEach(h=> { %>

                                <tr>
                                    <td>
                                        <%= h.parish %>
                                    </td>
                                    <td>
                                        <%= h.city %>
                                    </td>

                                    <td class="text-center">
                                        <%= h.bed_rooms %>
                                    </td>
                                    <td class="text-center">
                                        <%= h.bath_rooms %>
                                    </td>
                                    <td>
                                        <%= `$${h.price}.00` %>
                                    </td>
                                    <td>
                                        <%= h.status %>
                                    </td>
                                    <td><a href="/details/<%= h._id %>"
                                            class="fw-bold text-primary text-decoration-none">View</a></td>
                                   
                                </tr>


                                <% }) %>
                        </table>
                        <% } %>
                </div>

            </div>
            <div class="col-1"></div>
        </div>
    </div>

   




    <%- include('../views/partials/footer.ejs') %>