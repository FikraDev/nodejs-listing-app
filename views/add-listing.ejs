<%- include('../views/partials/header.ejs') %>

  <div class="container-fluid d-flex justify-content-center align-items-center">

    <form action="/add-listing" method="post" class="w-75">

      <h2 class="my-5 text-center">Add Your New Listing Here</h2>

      <div class="align-items-center flex-column  row">

        <div class="col-md-6 col-sm-12 border">

          

          <div>
            <label>Parish</label>
            <input type="text" class="form-control" placeholder="Parish" name="parish" required>
          </div>

          <div>
            <label for="">City</label>
            <input type="text" class="form-control" placeholder="City Name" name="city" required>
          </div>

          <div>
            <label for="">Address</label>
            <input type="text" class="form-control" placeholder="Address" name="address" required>
          </div>

          <div>
            <label for="">Property Size</label>
            <input type="number" class="form-control" placeholder="Square Footage of Property" name="sqr_ft" required>
          </div>

          <div>
            <label for="">Number of Bedrooms</label>
            <input type="number" class="form-control" placeholder="# of bedrooms" name="bed_rooms" required>
          </div>

          <div>
            <label for="">Number of Bathrooms</label>
            <input type="number" class="form-control" placeholder="# of bathrooms" name="bath_rooms" required>
          </div>

          <div>
            <label for="">Price</label>
            <input type="number" class="form-control" placeholder="Price" name="price" required>
          </div>

          <div>
            <label for="">Status</label>
            <input type="text" class="form-control" placeholder="Property Status" name="status" required>
          </div>

          <div class="my-5 text-center">
            <button class="btn btn-primary fw-bold w-25">Submit</button>
          </div>

        </div>

      </div>


    </form>


  </div>


  <%- include('../views/partials/footer.ejs') %>